/* pages/editReview/editReview.wxss */
.review-card{
  background: white;
  margin: 100rpx 30rpx 0 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
  height: 1000rpx;
}
.movie-image{
  margin-top: -70rpx;
  width: 295rpx;
  height: 412.5rpx;
}
.movie-title{
  margin-top: 20rpx;
  font-weight: 900;
  font-size: 36rpx;
  line-height: 50rpx;
}

.review{
  margin: 29rpx 27rpx 29rpx;
  padding-bottom: 26rpx;
  background: white;
}
.review-inp{
  width: 100%;
  height: 250rpx;
  padding: 29rpx 34rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}
.review-placeholder {
  color: rgba(29, 29, 38, 0.4);
}

.audio-inp{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  border: 1px solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
  padding: 0 50rpx;
  width: 150rpx;
  color: lightslategray;
  margin: 50rpx auto 0 auto;
}
.finish-edit{
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
}