/* pages/reviewList/reviewList.wxss */
.review-card{
  margin: 20rpx 0 0rpx;
  height: 200rpx;
  background: white;
}
.reviewer-head{
  flex-shrink: 0;
  margin-left: 53rpx;
  background: #F8F8FF;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.empty-review-info{
  text-align: center;
}
.empty-review-text{
  padding-top: 50rpx;  
  font-size: 34rpx;
  line-height: 48rxp;
  font-weight: bold;
  color: rgba(29, 29, 38, 0.8);
}
.empty-review-tips{
  margin-top: 16rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8b8b8b;
}
.add-review-btn{
  margin: 100rpx auto 0;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background: white;
  text-align: center;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
  color: #34373d;
  font-weight: bold;
}
.reviewer-info{
  padding-top: 10rpx;
  display: flex;
  align-items: center;
  margin-left: 31rpx;
}
.reviewer-name{
  margin-left: 30rpx;
  font-size: 30rpx;
  line-height: 42rxp;
  font-weight: bold;
  color: rgba(29, 29, 38, 0.8);
}
.review-content{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  line-height: 40rxp;
  margin-left: 100rpx;
  margin-right: 100rpx;
  margin-top: 20rpx;
}
.review .review-card:last-child{
  margin-bottom: 120rpx;
}

.audio-btn{
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
  width: 300rpx;
  display: flex;
  align-content: center;
  margin-left: 150rpx;
  margin-top: 5rpx;
  background-color: WHITESMOKE;
}
.audio-image{
  height: 40rpx;
  width: 40rpx;
  padding-top: 10rpx;
  padding-left: 35rpx;
  padding-right: 20rpx;
}
.audio-duration{
  color: lightslategray;
  font-size: 30rpx;
}




.goHome{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  background: white;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
  color: lightgray;
}